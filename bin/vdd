# PODNAME: vdd
# ABSTRACT: The Vim Debugger Daemon

use strict;
use warnings;
use VimDebug::Daemon;

$SIG{INT} = \&signalHandler;

VimDebug::Daemon->start(
   language  => shift @ARGV,
   command   => \@ARGV,
);

# die when children die
sub signalHandler {
   exit;
}
